extends _layout.pug
block vars
	- var page_class = "service_page oem_pdt";
	- var page_title = "代工劑型";


block page_pluginStyle

block popup

block content
	.page_wrap(class=page_class)
		//- .m_mask
		// =========================================================================
		// .page_section.page_main-hd  START
		section.page_section.page_main-hd
			.page_main-hd-inner.text-center
				h2.title #{page_title}
				.lizz_breadcrumb
					ul.cf.lis-n
						li.lizz_breadcrumb-item
							a(href="./").inner 首頁
						li.lizz_breadcrumb-item.current
							.arrow /
							a(href="javascript:;").inner #{page_title}
		// section.page_section.page_main-hd  END  !!
		// =========================================================================
		// article.page_section.page_main-bd  START
		article.page_section.page_main-bd.service_article
			.container
				section.main_section.oem_pdt_list
					ul#OEMPdt.lis-n
						li.oem_pdt_item(v-for="item in list" v-bind:id="item.anchor")
							.row
								.col-12.col-sm-2.oem_pdt_item-heading
									h3.txt.txt-heading-vertical.txt-h5.txt-secondary {{ item.name }}
								.col-12.col-sm-9.offset-sm-1.col-md-6.offset-md-0.oem_pdt_item-content
									h4.oem_pdt_item-content-heading {{ item.heading }}
									.oem_pdt_item-content-txt {{ item.content }}
								.col-12.col-sm-9.offset-sm-3.col-md-4.offset-md-0.oem_pdt_item-img
									.img_div.fit-content
										img(v-bind:src="item.pic")
		// article.page_section.page_main-bd  END  !!



block page_script
	script(src="./public/js/page/service.js?v=" + version)
	script(src="./public/js/page/service-oem-product.js?v=" + version)

