									a.inner(href="javascript:;") 原料趨勢
								li.news_category-item
									a.inner(href="javascript:;") 保養新知
								li.news_category-item
									a.inner(href="javascript:;") 化妝品法規
					.main_container.col-lg-9.offset-xl-1
						#newsMainList.news_main-list
							ul.lis-n.row
								li.col-md-6.col-xl-4.news_main-item(v-for="item in list")
									.news_card
										.inner
											.news_card-pic
												.news-pic.img_div
													img(v-bind:src="item.pic")
											.news_card-content.news-content
												.news-content-hd
													.news-tag
														.icon.svgicon
															include ../svg/icon-tag.svg
														.txt {{ item.tag }}
													.news-time
														.icon.svgicon
															include ../svg/icon-time.svg
														.txt {{ item.time }}
												.news-content-bd
													.news-title {{ item.title }}
													.news-brief {{ item.brief }}
												.news-content-ft
