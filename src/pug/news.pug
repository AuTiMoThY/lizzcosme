		// .page_section.page_main-hd  START
		section.page_section.page_main-hd
			.page_main-hd-inner.text-center
				h2.title #{page_title}
				.lizz_breadcrumb
					ul.cf.lis-n
						li.lizz_breadcrumb-item
							a(href="./").inner 首頁
						li.lizz_breadcrumb-item.current
							.arrow /
							a(href="javascript:;").inner #{page_title}
		// section.page_section.page_main-hd  END  !!
		// =========================================================================
		// article.page_section.page_main-bd  START
		main.page_section.page_main-bd.news_main
			.container
				.row
					aside.main_aside.col-lg-2
						.news_category
							h3.heading.txt-white.txt-h4 分類
							ul.lis-n
								li.news_category-item
									a.inner(href="javascript:;") 所有文章
								li.news_category-item
									a.inner(href="javascript:;") 產業新訊
								li.news_category-item
									a.inner(href="javascript:;") 市場動態
