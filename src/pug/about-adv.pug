extends _layout.pug
block vars
	- var page_class = "about_page our_adv";
	- var page_title = "我們的優勢";


block page_pluginStyle

block popup

block content
	.page_wrap(class=page_class)
		//- .m_mask
		// =========================================================================
		// .page_section.page_main-hd  START
		section.page_section.page_main-hd
			.page_main-hd-inner.text-center
				h2.title #{page_title}
				.lizz_breadcrumb
					ul.cf.lis-n
						li.lizz_breadcrumb-item
							a(href="./").inner 首頁
						li.lizz_breadcrumb-item.current
							.arrow /
							a(href="javascript:;").inner #{page_title}
		// section.page_section.page_main-hd  END  !!
		// =========================================================================
		// article.page_section.page_main-bd  START
		article.page_section.page_main-bd.about_article
			.container
				section.main_section.our_adv-hd.article-top
					.row
						.col-md-4
							.article-pic.img-style1
								.img_div
									img(src="./public/images/about/about4.jpg")
						.col-md-7.offset-md-1.d-flex
							.article-content.our_adv-content.align-self-center
								.txt_block
									p.txt 提供親切與彈性的代工服務，並協助客戶了解市場運作與脈動，降低行銷成本及加快產品周轉率，協物客戶在規劃的最短時間內取得一席之地，並快速獲利。
									.big_txt 我們的優勢
				section.main_section.our_adv-bd
					.row
						.our_adv-compare.compare1.col-md-6
							h3.our_adv-bd-heading.txt-h4.txt-secondary 儷氏
							.our_adv-compare-list
								ul.lis-n
									li.our_adv-compare-item
										.icontxt
											.icon
												img(src="./public/images/adv/adv1.svg")
											.txt 客製化配方設計
									li.our_adv-compare-item
										.icontxt
											.icon
												img(src="./public/images/adv/adv2.svg")
											.txt 包材建議/協力廠推薦
									li.our_adv-compare-item
										.icontxt
											.icon
												img(src="./public/images/adv/adv3.svg")
											.txt 熱銷市場配方仿樣
									li.our_adv-compare-item
										.icontxt
											.icon
												img(src="./public/images/adv/adv4.svg")
											.txt 產品文案建議
									li.our_adv-compare-item
										.icontxt
											.icon
												img(src="./public/images/adv/adv5.svg")
											.txt 安定性觀察
									li.our_adv-compare-item
										.icontxt
											.icon
												img(src="./public/images/adv/adv6.svg")
											.txt 第三單位檢測（SGS/ 台美）
									li.our_adv-compare-item
										.icontxt
											.icon
												img(src="./public/images/adv/adv7.svg")
											.txt 教育訓練/產品諮詢
									li.our_adv-compare-item
										.icontxt
											.icon
												img(src="./public/images/adv/sgs.png")
											.txt ISO22716
						.our_adv-compare.compare2.col-md-5.offset-md-1
							h3.our_adv-bd-heading.txt-h4.txt-grey4 傳統代工
							.our_adv-compare-list
								ul.lis-n
									li.our_adv-compare-item
										.icontxt
											.icon
												img(src="./public/images/adv/adv8.svg")
											.txt 單純代工無法提供客戶更好的建議及方向
									li.our_adv-compare-item
										.icontxt
											.icon
												img(src="./public/images/adv/adv9.svg")
											.txt 固定配方模式，無新品開發能力
									li.our_adv-compare-item
										.icontxt
											.icon
												img(src="./public/images/adv/adv10.svg")
											.txt 提供服務僅到內料生產結束，後續不願意提供其他服務
									li.our_adv-compare-item
										.icontxt
											.icon
												img(src="./public/images/adv/adv11.svg")
											.txt 無法提供市場新穎的成分


		// article.page_section.page_main-bd  END  !!



block page_script
	script(src="./public/js/page/about.js?v=" + version)

